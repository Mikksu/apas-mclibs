<Window x:Class="APAS.MotionLib.ZMC.ConfigurationEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APAS.MotionLib.ZMC.ConfigurationEditor"
        xmlns:uc="clr-namespace:APAS.MotionLib.ZMC.ConfigurationEditor.Views"
        xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        md:DialogServiceViews.IsRegistered="True" >
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="文件">
                <MenuItem Header="导入配置" Command="{Binding ImportConfigurationFromJson}"/>
                <MenuItem Header="导出配置" Command="{Binding ExportConfigurationToJson}"/>
            </MenuItem>
        </Menu>    

        <uc:AxisSettingsEditor/>
    </DockPanel>
</Window>
